<!-- switch_thumb_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/white" /> <!-- Màu xanh khi được chọn -->
            <stroke android:width="1dp" android:color="@color/xanh3"/>
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>

    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/white" /> <!-- Màu xanh khi được chọn -->
            <stroke android:width="1dp" android:color="@color/colorTaskBackground"/>
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>
</selector>
