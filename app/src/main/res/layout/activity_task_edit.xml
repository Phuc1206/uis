<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundnewtask"
    tools:context=".TaskEditActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingTop="50dp"
        android:textStyle="bold"
        android:text="Create new task"
        android:textSize="30dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="30dp"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Title" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:id="@+id/edtTitle"
            android:layout_marginTop="35dp"
            android:hint="Read a book"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="80dp"
            android:textStyle="bold"
            android:text="Description"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:id="@+id/edtDes"
            android:layout_marginTop="95dp"
            android:hint="Write your description"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textStyle="bold"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="145dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Start"
                android:layout_marginTop="175dp"
                android:layout_marginLeft="50dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End"
                android:textStyle="bold"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="175dp"
                android:layout_marginRight="34dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/edtTimeStart"
                android:layout_height="wrap_content"
                android:text="16 AM"
                android:layout_marginRight="34dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="190dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/edtTimeEnd"
                android:layout_height="wrap_content"
                android:text="16 AM"
                android:layout_marginRight="34dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="190dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="240dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtDateStart"
                android:text="Web,9 Sep,2023"
                android:layout_marginRight="34dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="260dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textStyle="bold"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="325dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:id="@+id/lauoutColor"
            android:layout_marginTop="340dp">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/ViewColor1"
                    android:background="@drawable/background_task_color"/>

                <ImageView
                    android:id="@+id/ImgColor1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:src="@drawable/baseline_done"
                    app:tint="@color/white" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/ViewColor2"
                    android:background="@drawable/background_task_color_2"/>

                <ImageView
                    android:id="@+id/ImgColor2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    app:tint="@color/white" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/ViewColor3"
                    android:background="@drawable/background_task_color_3"/>

                <ImageView
                    android:id="@+id/ImgColor3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    app:tint="@color/white" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/ViewColor4"
                    android:background="@drawable/background_task_color_4"/>

                <ImageView
                    android:id="@+id/ImgColor4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    app:tint="@color/white" />

            </FrameLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textStyle="bold"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="375dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textStyle="bold"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="440dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminders"
            android:textStyle="bold"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="500dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/btnsave"
            android:layout_marginRight="35dp"
            android:text="Done"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>